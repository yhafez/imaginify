{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"],
			"components/*": ["./src/components/shared/*"],
			"shadcn/*": ["./src/components/ui/*"],
			"actions/*": ["./lib/actions/*"],
			"database/*": ["./lib/database/*"],
			"models/*": ["./lib/database/models/*"],
			"utils": ["./lib/utils"],
			"actions": ["./lib/actions"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
